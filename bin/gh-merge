#!/bin/bash

set -e
set -u

repo="$HOME/.wrangler/repos/$1"

if [[ -d $repo ]]; then
  cd $repo
  git fetch origin
  git checkout master
  git pull origin master
else
  cd "$HOME/.wrangler/repos"
  git clone "https://github.com/CommBank/$1"
  cd $1
fi

  git merge -ff-only "origin/$2"
  git push origin master
